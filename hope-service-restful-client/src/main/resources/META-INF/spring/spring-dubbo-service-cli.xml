<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	   http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	   http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.hope6537.controller.*"/>
    <import resource="classpath*:/spring/spring-aspect.xml"/>
    
    <!--<import resource="classpath*:/redis/spring-redis.xml"/>-->

    <bean id="elasticSearchUtil" class="org.hope6537.rest.utils.ElasticSearchUtil" init-method="init"
          destroy-method="destroy">
        <property name="host" value="127.0.0.1"/>
        <property name="port" value="9300"/>
    </bean>

    <!-- 默认消费者域名 -->
    <dubbo:protocol host="www.hope6537.com"/>

    <dubbo:reference id="applyService" interface="org.hope6537.service.ApplyService"/>
    <dubbo:reference id="classesService" interface="org.hope6537.service.ClassesService"/>
    <dubbo:reference id="dutyService" interface="org.hope6537.service.DutyService"/>
    <dubbo:reference id="eventService" interface="org.hope6537.service.EventService"/>
    <dubbo:reference id="feedbackService" interface="org.hope6537.service.FeedbackService"/>
    <dubbo:reference id="joinService" interface="org.hope6537.service.JoinService"/>
    <dubbo:reference id="mealService" interface="org.hope6537.service.MealService"/>
    <dubbo:reference id="messageService" interface="org.hope6537.service.MessageService"/>
    <dubbo:reference id="noticeService" interface="org.hope6537.service.NoticeService"/>
    <dubbo:reference id="parentService" interface="org.hope6537.service.ParentService"/>
    <dubbo:reference id="planService" interface="org.hope6537.service.PlanService"/>
    <dubbo:reference id="requireService" interface="org.hope6537.service.RequireService"/>
    <dubbo:reference id="studentService" interface="org.hope6537.service.StudentService"/>
    <dubbo:reference id="teacherService" interface="org.hope6537.service.TeacherService"/>

    <dubbo:application name="hope-service-rpc-rest-api"/>

    <dubbo:registry protocol="zookeeper" address="www.hope6537.com:2181"/>

</beans>